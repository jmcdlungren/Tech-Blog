<div>
        <h2>
            {{title}}
        </h2>
        <h3>
            {{content}}
        </h3>
        <p>
            By: {{user.username}}
        </p>
</div>
<div>
    <h3>
        Comments:
    </h3>
    {{#each comments as |comment|}}
    <h4>
        User: {{comment.user.username}}
    </h4>
    <p>
        Comment: {{comment.comment_body}}
    </p>
    {{/each}}
</div>
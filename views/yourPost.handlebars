<div>
        <h2>
            {{title}}
        </h2>
        <h3>
            {{content}}
        </h3>
        <p>
            By: {{user.username}} on {{format_date date_created}}
        </p>
</div>

<button class="post-update" data-id="{{id}}">Update Post</button>
<br>
<button class="post-delete" data-id="{{id}}">Delete</button>

<div style="display: none" id="update-form">
  <h2>Edit Post</h2>
  <form class="form-save" data-id="{{id}}">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" value="{{title}}" />
    </div>
    <div>
      <label for="post-content">Content</label>
      <textarea id="post-content" name="post-content">{{content}}</textarea>
    </div>
    <div>
      <button type="submit" class="form-save" data-id="{{id}}">Save</button>
    </div>
  </form>
</div>



<div>
    <h3>
        Comments:
    </h3>
    {{#each comments as |comment|}}
    <h4>
        User: {{comment.user.username}}
    </h4>
    <p>
        Comment: {{comment.comment_body}}
    </p>
    {{/each}}
</div>



<br>
<div class="comment-form">
  <label for="title">Add Comment:</label>
  <input type="hidden" name="post-id" value="{{ id }}" />
  <textarea type="text" id="comment-body" name="comment-body"></textarea>
    <br><br>
  <input class="submit-btn" type="submit" value="Submit" />
</div>


<script src="/js/comment.js"></script>
<script src="/js/post.js"></script>
